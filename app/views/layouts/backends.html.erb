<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">
		<meta name="author" content="Mosaddek">
		<title><%= @system.name %></title>
		<!-- Bootstrap core CSS -->
		<link href="/backend_template/css/bootstrap.min.css" rel="stylesheet">
		<link href="/backend_template/css/bootstrap-reset.css" rel="stylesheet">
		<!--external css-->
		<link href="/backend_template/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

		<!--right slidebar-->
		<link href="/backend_template/css/slidebars.css" rel="stylesheet">

		<!-- Custom styles for this template -->
		<link href="/backend_template/css/style.css" rel="stylesheet">
		<link href="/backend_template/css/style-responsive.css" rel="stylesheet" />

		<!-- COMMON JS START -->
		<script src="/backend_template/js/jquery.js"></script>
		<%= javascript_include_tag 'application' %>
		<script src="/backend_template/js/bootstrap.min.js"></script>
		<script src="/backend_template/js/jquery-ui-1.9.2.custom.min.js"></script>
		<!-- COMMON JS END -->
		<!-- 提示 CSS -->
		<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" type="text/css">
		<!-- 提示 JS -->
		<script src="/backend_template/assets/toastr-master/toastr.js"></script>

		<!-- 圖片上傳 css -->
		<link href="/backend_template/assets/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" />
		<!-- 圖片上傳 js -->
		<script src="/backend_template/assets/bootstrap-fileupload/bootstrap-fileupload.js"></script>
		<%= csrf_meta_tags %>

		<!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
		<!--[if lt IE 9]>
		<script src="js/html5shiv.js"></script>
		<script src="js/respond.min.js"></script>
		<![endif]-->

	</head>

	<body style="font-family: '微軟正黑體'" data-success="<%= flash[:success] %>" data-error="<%= flash[:error] %>">

		<section id="container" class="">
			<!--header start-->
			<%= render :partial => "/backends/common/header" %>
			<!--header end-->
			<!--sidebar start-->
			<%= render :partial => "/backends/common/sidebar" %>
			<!--sidebar end-->
			<!--main content start-->
			<section id="main-content">
				<section class="wrapper site-min-height">
					<%= yield %>
				</section>
			</section>
			<!--main content end-->

			<!-- Right Slidebar start -->
			<% render :partial => "/backends/common/right_sidebar" %>
			<!-- Right Slidebar end -->

			<!--footer start-->
			<%= render :partial => "/backends/common/footer" %>
			<%= render :partial => "/backends/modal/my_modal" %>
			<!--footer end-->
		</section>

		<!-- js placed at the end of the document so the pages load faster -->
		<script class="include" type="text/javascript" src="/backend_template/js/jquery.dcjqaccordion.2.7.js"></script>
		<script src="/backend_template/js/jquery.scrollTo.min.js"></script>
		<script src="/backend_template/js/slidebars.min.js"></script>
		<script src="/backend_template/js/jquery.nicescroll.js" type="text/javascript"></script>
		<script src="/backend_template/js/respond.min.js" ></script>

		<!--common script for all pages-->

		<script type="text/javascript" src="/backend_template/assets/fuelux/js/spinner.min.js"></script>
		<script type="text/javascript" src="/backend_template/assets/bootstrap-fileupload/bootstrap-fileupload.js"></script>
		<script type="text/javascript" src="/backend_template/assets/bootstrap-wysihtml5/wysihtml5-0.3.0.js"></script>
		<script type="text/javascript" src="/backend_template/assets/bootstrap-wysihtml5/bootstrap-wysihtml5.js"></script>
		<script type="text/javascript" src="/backend_template/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
		<script type="text/javascript" src="/backend_template/assets/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
		<script type="text/javascript" src="/backend_template/assets/bootstrap-daterangepicker/moment.min.js"></script>
		<script type="text/javascript" src="/backend_template/assets/bootstrap-daterangepicker/daterangepicker.js"></script>
		<script type="text/javascript" src="/backend_template/assets/bootstrap-colorpicker/js/bootstrap-colorpicker.js"></script>
		<script type="text/javascript" src="/backend_template/assets/bootstrap-timepicker/js/bootstrap-timepicker.js"></script>
		<!-- <script type="text/javascript" src="/backend_template/assets/jquery-multi-select/js/jquery.multi-select.js"></script> -->
		<script type="text/javascript" src="/backend_template/assets/jquery-multi-select/js/jquery.quicksearch.js"></script>

		<script src="/backend_template/js/common-scripts.js"></script>
		<!-- 排序 -->
		<script src="/my/sort.js"></script>
		<script src="/my/ajaxUploadAttachment.js"></script>

		<!-- 上傳照片 -->
		<!-- <script src="/my/ajaxUploadAttachment.js"></script> -->
		<!-- <script src="/backend_template/js/advanced-form-components.js"></script> -->
		<script>
			$(document).ready(function() {
				var success = $("body").data('success')
				var error = $("body").data('error')
				toastr.options = {
					closeButton : true,
					debug : false,
					progressBar : false,
					positionClass : "toast-top-right",
					onclick : null,
					showDuration : "300",
					hideDuration : "1000",
					timeOut : "4000",
					extendedTimeOut : "1000",
					showEasing : "swing",
					hideEasing : "linear",
					showMethod : "fadeIn",
					hideMethod : "fadeOut"
				};
				if (success != "") {
					toastr.success(success);
				}
				if (error != "") {
					toastr.error(error);
				}
			});
		</script>
	</body>
</html>