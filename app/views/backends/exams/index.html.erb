<div class="row">
	<div class="col-lg-12">
		<nav class="navbar navbar-inverse" role="navigation">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="fa fa-bars"></span>
				</button>
				<a class="navbar-brand" href="#"><%= t("backend.navbar") %></a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<ul class="nav navbar-nav">
					<li>
						<%= link_to( t("backend.new"),new_backends_exam_path) %>
					</li>

				</ul>
			</div><!-- /.navbar-collapse -->
		</nav>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading">
				<%= t("activerecord.models.exma")%>
			</header>
			<div class="table-responsive">
				<table class="table table-bordered table-advance table-hover text-center">
					<thead>
						<tr>
							<th class="text-center col-lg-1">#</th>
							<th class="text-center col-lg-3">題目</th>
							<th class="text-center col-lg-3">答案</th>
							<th class="text-center col-lg-3">提示</th>
							<th class="text-center col-lg-1"></th>
						</tr>
					</thead>
					<tbody class="sortable_items" data-url="<%= sort_backends_exams_path %>">
						<% @exams.each do |exam| %>
						<tr data-item="<%= exam.id %>">
							<td><%= exam.id%></td>
							<td><%= exam.question %></td>
							<td><%= exam.answer %></td>
							<td><%= exam.tips %></td>
							<td> <%= link_to(edit_backends_exam_path(exam),class: "btn btn-block btn-sm btn-warning") do %> <i class="fa fa-pencil"></i> <% end %>
							<%= link_to(backends_exam_path(exam),class: "btn btn-block btn-sm btn-danger", method: :delete,data:{confirm: "Are You sure?"}) do %><i class="fa fa-trash-o"></i><% end %> </td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</section>
	</div>
</div>

